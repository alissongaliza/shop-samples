                {{#list categories}}
                <li class='lista-item'>
                    <div class='card-produto'>
                        <div class='card-conteudo'>
                            <h4 id='produto-nome'>{{nameProduct}}</h4>
                            <label class='produto-preco'>{{priceProduct}}</label>
                            <button class='produto-add-carrinho'>Add</button>
                        </div>

                    </div>
                </li>

                {{#list products}}
                <li class='lista-item'>
                    <div class='card-produto'>
                        <div class='card-conteudo'>
                            <h4 id='produto-nome'>{{nameProduct}}</h4>
                            <label class='produto-preco'>{{priceProduct}}</label>
                            <button class='produto-add-carrinho'>Add</button>
                        </div>

                    </div>
                </li>
                {{!-- <li> --}}
                    {{!-- <a href="categories/{{../this.id}}/products/{{this.id}}">Deletar</a> --}}
