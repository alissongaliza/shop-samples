<body>
    <div class="header">
        <h1>UFPB</h1>
    </div>
    <div class="carrinho">
        <span id="span-carrinho">Lista de compras R$ 0</span>
        <ul id="lista-carrinho" class="carrinho-conteudo"></ul>
    </div>
    <main>
        <nav id="nav-principal" class="nav-principal"></nav>
        <nav class="categorias">
            <ul id="categorias-recipiente"></ul>
        </nav>
        <section id="sessao-produtos" class="grid">
            <ul id='lista-produtos' class='grid'>
                {{!-- {{#each categories}}
                <li>
                    <p>{{this.nameCategory}}</p>
                </li> --}}
